<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qianfeng.dao.BusinessDao">

   <!-- ##查询指定用户id;-->
    <select id="selectByUsername" parameterType="string" resultType="com.qianfeng.pojo.Business">
        select * from business where business_username = #{business_username}
    </select>
   <!-- ##创建用户名-->
   <insert id="insertBusiness" parameterType="string">
       insert into business(business_username,business_status) values(#{business_username},1)
   </insert>

    <select id="isActive" parameterType="string" resultType="com.qianfeng.pojo.Business">
        select * from business where business_username = #{business_username} and business_status = 1
    </select>

    <!--************************************************************************************************-->


    <!--##修改登录名-->
    <update id="updateBusinessUserName" parameterType="com.qianfeng.pojo.Business">
        update business set business_username = #{business_username} where business_id = #{business_id};
    </update>

    <!--***************************************胡斯哲*****************************************-->

    <!--##修改商户状态（冻结）-->
    <update id="updateBusinessStatus" parameterType="com.qianfeng.pojo.Business">
        update business set business_status = #{business_status} where business_id = #{business_id};
    </update>













</mapper>